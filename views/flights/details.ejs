<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Flight Details</title>
</head>
<body>
    <h1>Details</h1>
    <section id="show-page">
            <div>Airline: </div>
            <div><%= flight.title %></div>
            <div>Flight Number: </div>
            <div><%= flight.flightNo %></div>
            <div>Depart Time: </div>
            <div><%= flight.departs %></div>
            <div>Airport: </div>
            <div><%= flight.airport %></div>
    </section>
    <br><br>
    <h2>Add Arrival Information</h2>
    <form id="add-arrival" method="POST" action="/flights/<%= flight._id %>/details">
    <label>Arrival Time:</label>
    <input type="datetime-local" name="departs" value="2019-08-14T13:30">
    <label>Airport:</label>
    <select name="airport">
        <option value="SEA">SEA</option>
        <option value="AUS">AUS</option>
        <option value="DAL">DAL</option>
        <option value="LAX">LAX</option>
    </select>
    <input type="submit" value="Add Arrival Information">
    </form>
</body>
</html>

<% if (flight.reviews.length) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Aiport</th>
        </tr>
      </thead>
      <tbody>
        <% flight.reviews.forEach(function(i) { %>
          <tr>
            <td><%= i.createdAt.toLocaleDateString() %></td>
            <td><%= i.airport %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Arrival Information Yet</h5>
  <% } %>
  